@model IEnumerable<PigeonDLCore.Models.Folder>

@{
    ViewData["Title"] = "Your Folders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Folders</h1>

<p>
    <a asp-action="Create">Create New Folder</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!--<th>
                @Html.DisplayNameFor(model => model.IDFolder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDUser)
            </th>-->
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUploaded)
            </th>
            <!--<th>
                @Html.DisplayNameFor(model => model.URL)
            </th>-->
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Index", "File", new { URL = item.URL })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUploaded)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IDFolder }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IDFolder })
            </td>
        </tr>
}
    </tbody>
</table>
