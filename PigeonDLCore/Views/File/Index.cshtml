@model IEnumerable<PigeonDLCore.Models.File>
@using System.Security.Claims

@{
    ViewData["Title"].ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

@if (ViewData["AllowUploadDelete"].ToString() == "true")
{
    <p>
        @Html.ActionLink("Upload File", "Upload", new { URL=ViewData["URL"] })
    </p>
}

<table class="table">
    <thead>
        <tr>
            <!--<th>
                @Html.DisplayNameFor(model => model.IDFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDFolder)
            </th>-->
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <!--<th>
                @Html.DisplayNameFor(model => model.URL)
            </th>-->
            <th>
                @Html.DisplayNameFor(model => model.Downloads)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUploaded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Downloads)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateUploaded)
        </td>
        @if (ViewData["AllowUploadDelete"].ToString() == "true")
        {
            <td>
                @Html.ActionLink("Details", "Details", new { URL=item.URL }) |
                @Html.ActionLink("Delete", "Delete", new { URL=item.URL })
            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Details", "Details", new { URL=item.URL })
            </td>
        }
    </tr>
}
    </tbody>
</table>
